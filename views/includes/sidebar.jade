    // sidebar widget start
    .sidebar-widget
      h4 Server Status
      ul.list-group
        li
          span.label.label-danger.pull-right 33%
          p CPU Used
          .progress.progress-xs
            .progress-bar.progress-bar-danger(style='width: 33%;')
              span.sr-only 33%
        li
          span.label.label-warning.pull-right 65%
          p Bandwidth
          .progress.progress-xs
            .progress-bar.progress-bar-warning(style='width: 65%;')
              span.sr-only 65%
        li
          a.btn.btn-success.btn-sm(href='javascript:;') View Details
